<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="768.0" prefWidth="958.0" style="-fx-background-color: linear-gradient(to bottom right, #6a85f1, #7f8dff);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.covoiturage.LoginController">

    <!-- AnchorPane qui contient TOUT le contenu de la carte -->
    <AnchorPane layoutX="262.0" layoutY="60.0" prefHeight="650.0" prefWidth="500.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 20, 0, 0, 10);">
        <ImageView fitHeight="88.0" fitWidth="100.0" layoutX="208.0" layoutY="46.0" preserveRatio="true">
            <image>
                <Image url="@../../../logo.png" />
            </image>
        </ImageView>

        <!-- Titre -->
        <Text layoutX="160" layoutY="180" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-fill: #2d3436;" text="Covoiturage" />

        <!-- Label + Champ Email -->
        <Label layoutX="50" layoutY="230" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="Adresse e-mail" />
        <TextField fx:id="emailField" layoutX="50" layoutY="260" prefHeight="50" prefWidth="400" promptText="exemple@email.com" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f0f2f5; -fx-border-color: #dcdde1; -fx-padding: 0 15; -fx-font-size: 16px;" />

        <!-- Label + Champ Password -->
        <Label layoutX="50" layoutY="330" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="Mot de passe" />
        <PasswordField fx:id="passwordField" layoutX="50" layoutY="360" prefHeight="50" prefWidth="400" promptText="********" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-background-color: #f0f2f5; -fx-border-color: #dcdde1; -fx-padding: 0 15; -fx-font-size: 16px;" />

        <!-- Boutons -->
        <Button fx:id="driverButton" layoutX="50" layoutY="440" onAction="#handleDriverLogin" prefHeight="55" prefWidth="400" style="-fx-background-color: #4baf50; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Se connecter en tant que Conducteur" />
        <Button fx:id="passengerButton" layoutX="50" layoutY="510" onAction="#handlePassengerLogin" prefHeight="55" prefWidth="400" style="-fx-background-color: #2096f3; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px; -fx-font-weight: bold; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="Se connecter en tant que Passager" />

        <!-- Lien inscription -->
        <HBox layoutX="140" layoutY="590" spacing="8">
            <children>
                <Text style="-fx-font-size: 15px; -fx-fill: #7f8fa6;" text="Pas encore de compte ?" />
            </children>
        </HBox>
          <Hyperlink layoutX="298.0" layoutY="586.0" onAction="#handleSignup" style="-fx-font-size: 15px; -fx-text-fill: #3498db; -fx-font-weight: bold; -fx-cursor: hand; -fx-underline: false;" text="S'inscrire" />

    </AnchorPane>

</AnchorPane>
